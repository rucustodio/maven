<!DOCTYPE html>
<html lang="en">
<head>
  <title>maven | foodie workaholics</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='
  text/css'>
  <link href='https://fonts.googleapis.com/css?family=Raleway:400,300' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="fluid-container">
    <nav class="navbar navbar-light bg-faded">
        <%= link_to 'maven', root_path, :class => 'navbar-brand' %>
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <%= link_to 'Products', products_path, :class => 'nav-link' %>
            </li>
        </ul>
        <ul class="nav navbar-nav pull-xs-right">
            <% if signed_in? %>
                <li class="nav-item">
                    <%= link_to 'Profile', edit_user_registration_path, method: :get, :class => 'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, :class => 'nav-link' %>
                </li>
            <% else %>
                <li class="nav-item">
                    <%= link_to 'Sign in', new_user_session_path, :class => 'nav-link' %>
                </li>
            <% end %>
        </ul>
    </nav>
</div>

<% if notice %>
    <div class="container">
        <div class="alert alert-success col-md-8 col-md-push-2" role="alert">
            <p class="notice"><%= notice %></p>
        </div>
    </div>
<% end %>

<% if alert %>
    <div class="container">
        <div class="alert alert-danger col-md-8 col-md-push-2" role="alert">
            <p class="notice"><%= alert %></p>
        </div>
    </div>
<% end %>

<%= yield %>

<script>
    if (window.location.host.indexOf('localhost') == -1) {
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-76186438-1', 'auto');
        ga('send', 'pageview');
    }
</script>
</body>
</html>
