<div class="container">
    <div class="col-md-8 col-md-push-2">
        <h2>
            Products
            <%= link_to 'Back', root_path, :class => 'btn btn-primary pull-xs-right' %>
        </h2>
        <hr />
    </div>
    <div class="col-md-8 col-md-push-2">
        <% @products.each do |product| %>
            <div class="media">
              <div class="media-left">
                <a href="products/<%= product.id %>">
                  <%= image_tag product.image.url(:thumb)%>
                </a>
              </div>
              <div class="media-body">
                <h4 class="media-heading">
                    <%= link_to product.title, product %>
                </h4>
                <div class="col-xs-4">
                    Type: <a href="#">Salad</a>
                </div>
                <div class="col-xs-4">
                    Store: <a href="#">Trader Joe's</a>
                </div>
                <div class="col-xs-4">
                    Price: <%= product.price %>
                </div>
                <br />
                <br />
                <p><%= product.description %></p>
              </div>
            </div>
        <% end %>
    </div>
</div>