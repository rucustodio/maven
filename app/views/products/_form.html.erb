<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :placeholder => 'Title of product', :required => 'required'%>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, :placeholder => 'Short description of product', :required => 'required'%>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.select(:price, [['$', 1], ['$$', 2], ['$$$', 3], ['$$$$', 4], ['$$$$$', 5]], :required => 'required') %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn' %>
  </div>
<% end %>
