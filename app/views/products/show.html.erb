<div class="container">
    <div class="col-md-10 col-md-push-1">
        <div class="product-show">
            <%= image_tag @product.image.url('hero'), class:"product-image"%>
            <h2><%= @product.title %></h2>
            <hr />
            <h4><%= get_money(@product.price) %> | <img src="/assets/stars.png" style="display: inline-block;"></h4>
            <p class="product-description"><%= @product.description %> <%= @product.description %></p>
            <p class="text-xs-center">
                <img src="/assets/category_icons.png" style="display:block;margin: 0 auto;">
                <button class="btn btn-primary">Add to Favorites</button>
            </p>
            <br />
            <br />
            <br />
        </div>
    </div>
</div>

<div class="fluid-container gray-container">
    <div class="container">
        <div class="col-md-8 col-md-push-2">
            <h4>12 Reviews</h4>
            <hr />
            <% @reviews.each do |review| %>
                <div class="media review">
                  <div class="media-left">
                    <a href="#">
                      <img src="/assets/missing.jpg" width="64" height="64"/>
                    </a>
                    <a class="small"><%= User.find(review.user_id).email.split('@')[0] %></a>
                  </div>
                  <div class="media-body">
                    <h5 class="media-heading">
                        Rating: <%= review.rating %>/5 <span class="time small pull-xs-right"><%= time_ago_in_words(review.updated_at)%> ago</span>
                    </h5>
                    <p><%= review.description %></p>
                    <% if signed_in? && current_user.id == User.find(review.user_id).id%>
                        <%= link_to 'Edit review', {controller: 'reviews', action: 'edit', id: review}, :class => 'pull-xs-right' %>
                    <% end %>    
                  </div>
                </div>
            <% end %>
            <br />
        </div>

        <div class="clearfix"></div>

        <div class="col-md-8 col-md-push-2 text-xs-center">
            <% if signed_in? %>
                <%= link_to 'Leave a review', {controller: 'reviews', action: 'new', id: @product}, :class => 'btn btn-primary' %>
                <!-- <%= link_to 'Back', products_path, :class => 'btn btn-primary' %> -->
            <% end %>
        </div>
    </div>
</div>